<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="primary">
		<jta-data-source>java:/storageCycle</jta-data-source>
		<class>cz.cvut.jboss.storagecycle.VendingMachine.AuditLog</class>
		<class>cz.cvut.jboss.storagecycle.VendingMachine.Audit</class>
		<class>cz.cvut.jboss.storagecycle.Product.ProductType</class>
		<class>cz.cvut.jboss.storagecycle.Product.ProductStock</class>
		<class>cz.cvut.jboss.storagecycle.Person.Person</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.archive.autodetection" value="class" />
		</properties>
	</persistence-unit>
</persistence>